@model CasesApp.Models.Case

@{
    ViewData["Title"] = "Edit";

    List<SelectListItem> statuses = new List<SelectListItem>();
    statuses.Add(new SelectListItem
    {
        Text = "Pending Review",
        Value = "PendingReview",
        Selected = true
    });
    statuses.Add(new SelectListItem
    {
        Text = "Ready For Approval",
        Value = "PendingApproval"
    });

}

<h2>Edit</h2>

<h4>Case</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Details" class="control-label"></label>
                <input asp-for="Details" class="form-control" />
                <span asp-validation-for="Details" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WorkerEmail" class="control-label"></label>
                <input asp-for="WorkerEmail" class="form-control" />
                <span asp-validation-for="WorkerEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReviewerEmail" class="control-label"></label>
                <input asp-for="ReviewerEmail" class="form-control" />
                <span asp-validation-for="ReviewerEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ApproverEmail" class="control-label"></label>
                <input asp-for="ApproverEmail" class="form-control" />
                <span asp-validation-for="ApproverEmail" class="text-danger"></span>
            </div>
            @Html.DropDownListFor(Model => Model.Status, statuses, "Select Status")
            @*<div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" class="form-control"></select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
